<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/t4"
    android:gravity="center_horizontal|center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/r_relative"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/lin_a"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_marginTop="-15dp" >

        <LinearLayout 
     android:id="@+id/tv_lin"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/radius"
    >
      <TextView
            android:id="@+id/tv_score1"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/linear1"
            android:layout_marginTop="0dp"
            android:background="@drawable/radius"
            android:gravity="center"
            android:text="得分:"
            android:textColor="#8E839F"
            android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@+id/linear1"
        android:layout_margin="2dp"
        android:background="@drawable/radius"
        android:gravity="center"
        android:text="0"
        android:textColor="#8E839F"
        android:textSize="25sp" />

  </LinearLayout>
<LinearLayout 
            android:id="@+id/linear1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_suanshi"
             android:gravity="center"
               android:background="@drawable/radius">
        <TextView
            android:id="@+id/tv_result1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/radius"
            android:gravity="center"
            android:text="0"
            android:textSize="25sp" />
</LinearLayout>
        <TextView
            android:id="@+id/tv_xianshi1"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linear1"
            android:background="#E1D1D2"
            android:gravity="center"
            android:text="两个数运算"
            android:textColor="#8B8E8F"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_suanshi"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_lin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="#F8C4E9"
            android:gravity="center"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/finish"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_above="@+id/tv_suanshi"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_lin"
            android:background="@drawable/button_chcolor1"
            android:gravity="center"
            android:text="结束"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_a"
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_below="@+id/lin_a"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center" >

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_above="@+id/button6"
            android:layout_toRightOf="@+id/button2"
            android:background="#A9DBF6"
            android:clickable="false"
            android:text="3" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_5"
            android:background="#E1D1D2"
            android:clickable="false"
            android:text="+" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#A9DBF6"
            android:clickable="false"
            android:text="5" />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_above="@+id/button4"
            android:layout_toLeftOf="@+id/button2"
            android:background="#A9DBF6"
            android:clickable="false"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_above="@+id/btn_5"
            android:layout_centerHorizontal="true"
            android:background="#E1D1D2"
            android:clickable="false"
            android:text="-" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_5"
            android:background="#E1D1D2"
            android:clickable="false"
            android:text="+" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_below="@+id/button4"
            android:layout_toLeftOf="@+id/button8"
            android:background="#A9DBF6"
            android:clickable="false"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_below="@+id/btn_5"
            android:layout_centerHorizontal="true"
            android:background="#E1D1D2"
            android:clickable="false"
            android:text="-" />

        <Button
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button8"
            android:background="#A9DBF6"
            android:clickable="false"
            android:text="9" />
    </RelativeLayout>

</RelativeLayout>